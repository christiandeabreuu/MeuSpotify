<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_spotify_full"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_spotify_full"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spotify"
        tools:targetApi="31">
        <activity
            android:name=".ui.createplaylist.CreatePlaylistActivity"
            android:exported="false" />
        <activity
            android:name=".ui.playlist.PlaylistActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.albuns.AlbumsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="meuapp" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.artist.ArtistActivity"
            android:exported="true"
            android:launchMode="singleTask">
        </activity>

    </application>

</manifest>